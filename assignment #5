# pt.1
def greet_user(name):
    print(f"Hello, {name}! Welcome aboard.")

def add_numbers(a, b):
    return a + b

# Example usage
greet_user("Isaac")
sum_result = add_numbers(10, 9)
print(f"The sum of 10 and 9 is {sum_result}.")

# pt.2
def describe_pet(pet_name, animal_type="dog"):
    print(f"I have a {animal_type} named {pet_name}.")
    
describe_pet("Yoshi")
describe_pet("Cloud", "cat")

# pt.3
def make_sandwich(*ingredients):
    print("Making a sandwich with the following ingredients:")
    for item in ingredients:
        print(f"- {item}")

make_sandwich("Bacon", "Egg", "Cheese")

# pt.4
def factorial(n):
    if n == 0 or n == 1:
        return 1
    return n * factorial(n - 1)

def fibonacci(n):
    if n <= 1:
        return n
    return fibonacci(n - 1) + fibonacci(n - 2)

fact_result = factorial(5)
fib_result = fibonacci(6)

print(f"Factorial of 5 is {fact_result}.")
print(f"The 6th Fibonacci number is {fib_result}.")
